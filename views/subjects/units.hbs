{{> header}}
<h2>{{subject.title}}</h2>
<div class="units-container">
    <ul class="units-list">
        {{#each subject.units}}
            <li class="unit-item">
                <a href="/units/{{this._id}}" class="unit-link">
                    {{this.title}}
                </a>
            </li>
        {{/each}}
    </ul>
</div>

<style>
    .units-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .units-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .unit-item {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .unit-item:last-child {
        border-bottom: none;
    }

    .unit-link {
        color: #007BFF;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s, text-decoration 0.3s;
    }

    .unit-link:hover {
        text-decoration: underline;
        color: #0056b3;
    }
</style>
