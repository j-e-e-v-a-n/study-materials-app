{{> header}}
<div class="chapter-container">
    <h2>{{chapter.title}}</h2>
    <ul class="notes-list">
        {{#each chapter.notesPaths}}
            <li class="note-item">
                <a href="{{this}}" class="btn-download" download>Download</a>
            </li>
        {{/each}}
    </ul>
</div>

<style>
    /* Container Styling */
    .chapter-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #444;
        margin-bottom: 25px;
        text-align: center;
        font-family: 'Arial', sans-serif;
        font-weight: 600;
        font-size: 24px;
    }

    .notes-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .note-item {
        margin-bottom: 15px;
        text-align: center;
    }

    .btn-download {
        display: inline-block;
        background-color: #007BFF;
        color: #fff;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 16px;
        transition: background-color 0.3s, transform 0.2s;
        font-family: 'Arial', sans-serif;
    }

    .btn-download:hover {
        background-color: #5ca5f4;
        transform: translateY(-2px);
    }

    /* Responsive Styling */
    @media (max-width: 768px) {
        .chapter-container {
            padding: 15px;
        }

        .btn-download {
            padding: 10px 20px;
            font-size: 14px;
        }
    }

    @media (max-width: 600px) {
        .btn-download {
            padding: 8px 16px;
            font-size: 12px;
        }
    }
</style>
