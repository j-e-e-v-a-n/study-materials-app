{{> header}}
<div class="material-container">
    <h2>{{material.title}}</h2>
    <p class="material-description">{{material.description}}</p>
    <a href="{{material.pdfPath}}" class="btn-download" download>Download PDF</a>
</div>

<style>
    .material-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        margin-bottom: 15px;
    }

    .material-description {
        font-size: 16px;
        line-height: 1.5;
        margin-bottom: 20px;
        color: #555;
    }

    .pdf-path {
        font-size: 14px;
        color: #007BFF;
        margin-bottom: 20px;
    }

    .pdf-path a {
        color: #007BFF;
        text-decoration: none;
    }

    .pdf-path a:hover {
        text-decoration: underline;
    }

    .btn-download {
        display: inline-block;
        background: #007BFF;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
        text-align: center;
    }

    .btn-download:hover {
        background: #0056b3;
    }

    /* Responsive styling */
    @media (max-width: 600px) {
        .material-container {
            padding: 15px;
        }

        .btn-download {
            padding: 8px 16px;
            font-size: 14px;
        }
    }
</style>
