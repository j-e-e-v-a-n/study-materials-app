{{> adminheader}}
<div class="materials-container">
    <h2>Study Materials</h2>
    <ul class="materials-list">
        {{#each materials}}
            <li class="material-item">
                <div class="material-info">
                    <span class="material-username">{{this.username}}</span>
                    <span class="material-email">{{this.email}}</span>
                    {{#if this.isAdmin}}
                        <span class="material-role">Admin</span>
                    {{/if}}
                </div>
                <form action="/admin/deleteUser/{{this._id}}" method="post" class="delete-form">
                    <button type="submit" class="delete-button">Delete</button>
                </form>
            </li>
        {{/each}}
    </ul>
</div>

<style>
    /* General Styles */
    .materials-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .materials-list {
        list-style: none;
        padding: 0;
    }

    .material-item {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.3s ease;
    }

    .material-item:hover {
        background-color: #f1f1f1;
    }

    .material-item:last-child {
        border-bottom: none;
    }

    .material-info {
        display: flex;
        flex-direction: column;
        color: #333;
    }

    .material-username,
    .material-email,
    .material-role {
        display: block;
        margin-bottom: 5px;
    }

    .material-role {
        font-weight: bold;
        color: #d9534f; /* Red color for Admin */
    }

    .delete-button {
        background-color: #d9534f; /* Red color for delete button */
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s, transform 0.2s;
    }

    .delete-button:hover {
        background-color: #c82333; /* Darker red on hover */
        transform: scale(1.05); /* Slight zoom effect */
    }

    /* Responsive Styling */
    @media (max-width: 768px) {
        .materials-container {
            padding: 15px;
        }
    }

    @media (max-width: 600px) {
        .materials-container {
            padding: 10px;
        }

        .material-item {
            padding: 10px 0;
            flex-direction: column;
            align-items: flex-start;
        }

        .delete-button {
            margin-top: 10px;
            width: 100%; /* Full width on small screens */
            text-align: center;
        }
    }
</style>
