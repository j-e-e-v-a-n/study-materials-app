{{> adminheader}}
<div class="container">
    <h2>Edit Chapter</h2>
    <form action="/admin/editChapter/{{chapter._id}}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Chapter Title:</label>
            <input type="text" id="title" name="title" class="form-control" value="{{chapter.title}}" required>
        </div>
        <div class="form-group">
            <label for="unit">Unit:</label>
            <select id="unit" name="unitId" class="form-control" required>
                {{#each units}}
                    <option value="{{this._id}}" {{#if (eq this._id chapter.unit._id)}}selected{{/if}}>{{this.title}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="notes">Current Notes:</label>
            <ul class="notes-list">
                {{#each chapter.notesPaths}}
                    <li class="note-item">
                        <a href="{{this}}" target="_blank" class="note-link">View Note {{@index}}</a>
                        <input type="checkbox" name="removeNotes" value="{{this}}" class="remove-checkbox"> Remove
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="form-group">
            <label for="newNotes">Add New Notes:</label>
            <input type="file" id="newNotes" name="newNotes" class="form-control" multiple>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>

<style>
    /* Container Styling */
    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        font-size: 1rem;
        font-weight: 500;
        color: #555;
        display: block;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.075);
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
    }

    .notes-list {
        list-style-type: none;
        padding: 0;
    }

    .note-item {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .note-item:last-child {
        border-bottom: none;
    }

    .note-link {
        color: #007bff;
        text-decoration: none;
    }

    .note-link:hover {
        text-decoration: underline;
    }

    .remove-checkbox {
        margin-left: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .container {
            padding: 15px;
        }
    }

    @media (max-width: 600px) {
        .container {
            padding: 10px;
        }

        .note-item {
            padding: 8px 0;
            flex-direction: column;
            align-items: flex-start;
        }

        .remove-checkbox {
            margin-top: 10px;
        }
    }
</style>

<script>
    // Register Handlebars helper for equality check
    Handlebars.registerHelper('eq', function(a, b) {
        return a === b;
    });
</script>
