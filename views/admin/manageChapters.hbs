{{> adminheader}}
<div class="container">
    <h2>Manage Chapters</h2>
    <a href="/admin/addChapter" class="btn btn-primary">Add Chapter</a>
    <ul class="chapter-list">
        {{#each chapters}}
            <li class="chapter-item">
                <div class="chapter-info">
                    <h3>Chapter: {{this.title}}</h3>
                    <p>Unit: {{this.unit.title}}, Subject: {{this.unit.subject.title}}</p>
                    <div class="notes-section">
                        <h4>Notes:</h4>
                        {{#if this.notesPaths}}
                            <ul class="notes-list">
                                {{#each this.notesPaths}}
                                    <li><a href="{{this}}" download>Download Notes</a></li>
                                {{/each}}
                            </ul>
                        {{else}}
                            <p>No notes available</p>
                        {{/if}}
                    </div>
                </div>
                <div class="button-group">
                    <a href="/admin/addNotes/{{this._id}}" class="btn btn-secondary">Add Notes</a>
                    <a href="/admin/editChapter/{{this._id}}" class="btn btn-secondary">Edit</a>
                    <a href="/admin/deleteChapter/{{this._id}}" class="btn btn-danger">Delete</a>
                </div>
            </li>
        {{/each}}
    </ul>
</div>

<style>
    /* Container Styling */
    .container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .btn {
        display: inline-block;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 0.375rem;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-right: 0.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .chapter-list {
        list-style-type: none;
        padding: 0;
    }

    .chapter-item {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .chapter-item:last-child {
        border-bottom: none;
    }

    .chapter-info {
        margin-bottom: 10px;
    }

    .notes-section {
        margin-top: 10px;
    }

    .notes-list {
        list-style-type: none;
        padding: 0;
    }

    .notes-list li {
        margin-bottom: 5px;
    }

    .button-group {
        display: flex;
        gap: 10px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .container {
            padding: 15px;
        }
    }

    @media (max-width: 600px) {
        .container {
            padding: 10px;
        }
    }
</style>
