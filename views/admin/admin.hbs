{{> adminheader}}
<h2>Study Materials</h2>
<div class="materials-container" role="main">
    <ul class="materials-list">
        {{#each materials}}
            <li class="material-item">
                <div class="material-info">
                   
                    <span class="material-username">{{this.username}}</span>
                    <span class="material-email">{{this.email}}</span>
                    
                        <span class="material-role">Admin</span>
                    
                </div>
                 {{#if this.isAdmin}}
                    <form action="/admin/deleteUser/{{this._id}}" method="get" class="delete-form">
                    <button type="submit" class="delete-button">Delete</button>
                </form>
                    {{/if}}
                
            </li>
        {{/each}}
    </ul>
</div>

<style>
    /* General Styles */
    .materials-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .materials-list {
        list-style-type: none;
        padding: 0;
    }

    .material-item {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .material-item:last-child {
        border-bottom: none;
    }

    .material-info {
        display: flex;
        flex-direction: column;
    }

    .material-username,
    .material-email,
    .material-role {
        display: block;
        margin-bottom: 5px;
    }

    .material-role {
        font-weight: bold;
        color: #d9534f; /* Red color for Admin */
    }

    .delete-button {
        background-color: #d9534f; /* Red color for delete button */
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s;
    }

    .delete-button:hover {
        background-color: #c9302c; /* Darker red on hover */
    }

    /* Responsive Styling */
    @media (max-width: 768px) {
        .materials-container {
            padding: 15px;
        }
    }

    @media (max-width: 600px) {
        .materials-container {
            padding: 10px;
        }

        .material-item {
            padding: 8px 0;
            flex-direction: column;
            align-items: flex-start;
        }

        .delete-button {
            margin-top: 10px;
        }
    }

    @media (max-width: 400px) {
        .materials-container {
            padding: 15px;
        }
    }
</style>
