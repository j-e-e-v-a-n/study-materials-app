{{> adminheader}}

<div class="container">
    <h2>Manage Units</h2>
    <a href="/admin/addUnit" class="btn btn-primary">Add Unit</a>
    <ul class="unit-list">
        {{#each units}}
            <li class="unit-item">
                <span class="unit-title">{{this.title}} - {{this.subjectTitle}}</span>
                <div class="button-group">
                    <a href="/admin/editUnit/{{this._id}}" class="btn btn-secondary">Edit</a>
                    <a href="/admin/deleteUnit/{{this._id}}" class="btn btn-danger">Delete</a>
                </div>
            </li>
        {{/each}}
    </ul>
</div>

<style>
    /* Container Styling */
    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .btn {
        display: inline-block;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 0.375rem;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-right: 0.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .unit-list {
        list-style-type: none;
        padding: 0;
    }

    .unit-item {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .unit-item:last-child {
        border-bottom: none;
    }

    .unit-title {
        font-size: 1rem;
        color: #333;
    }

    .button-group {
        display: flex;
        gap: 10px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .container {
            padding: 15px;
        }
    }

    @media (max-width: 600px) {
        .container {
            padding: 10px;
        }

        .button-group {
            flex-direction: column;
        }

        .button-group .btn {
            margin-bottom: 5px;
        }
    }
</style>
